@model IEnumerable<HomeWork112.Models.custom>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CustomList</title>
    <style>
        .table-striped tbody tr:nth-child(even){
            background-color:cornflowerblue;
            color:white;
        }
        .table-striped tbody tr:last-child {
            background-color: gray;
        }
    </style>
</head>
<body>
    <table class="table table-striped table-bordered">
        <thead style="background-color:deepskyblue;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.cName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cCard)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cAccount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cPasswd)
                </th>
                <th>
                    <a href="Create" class="btn btn-outline-primary">Create New</a>
                </th>
            </tr>
        </thead>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cAccount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cPasswd)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id },new {@class= "btn btn-success" }) 
                @Html.ActionLink("Delete", "Delete", new { id=item.Id },new { @class= "btn btn-outline-danger" }) 
                
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
